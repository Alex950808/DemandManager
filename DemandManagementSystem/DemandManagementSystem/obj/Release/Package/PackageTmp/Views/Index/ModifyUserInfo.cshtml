@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!-- 主体 -->
<div class="layui-body">
    <!-- 主要内容 -->
    <div class="container">
        <form class="layui-form" action="~/Index/UpdateUserInfo" method="post">
            <table class="layui-table layui-table-add layui-table-detail" lay-skin="nob">
                <tbody>
                    <tr>
                        <th>用户姓名</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="UserName" value="@Model.UserName" autocomplete="off" class="layui-input">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>登录账号</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="LoginId" value="@Model.LoginId" autocomplete="off" class="layui-input">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>登录密码</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="LoginPwd" value="@Model.LoginPwd" autocomplete="off" class="layui-input">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>联系电话</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" autocomplete="off" class="layui-input">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>邮箱</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="Email" value="@Model.Email" autocomplete="off" class="layui-input">
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>角色类型</th>
                        <td>
                            <div class="table-input">
                                @{
                                    if (Session["RoleInfo"] != null)
                                    {
                                        foreach (Models.RoleInfo role in (IList<Models.RoleInfo>)Session["RoleInfo"])
                                        {
                                            <input type="radio" name="RoleId" value="@role.RoleId" title="@role.RoleName" @(Model.RoleId == role.RoleId ? "checked" : "")>
                                        }
                                    }
                                }
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <td>
                            <input type="hidden" name="UserId" value="@Model.UserId" autocomplete="off" class="layui-input">
                            <input type="hidden" name="UserRoleId" value="@Model.UserRoleId" autocomplete="off" class="layui-input">
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="layui-table-btn2 ">
                <input type="submit" class="layui-btn" value="修 改" />
                @*<a class="layui-btn" href="首页.html">新 增</a>*@
                <a class="layui-btn layui-btn-primary cancel" onclick="window.history.back()">取 消</a>
            </div>
        </form>
        @ViewBag.Info
    </div>
</div>
