@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Models.UserInfo
<!-- 主体 -->
<div class="layui-body">
    <!-- 主要内容 -->
    <div class="container">
        <form class="layui-form" action="~/Index/AddUserInfo" method="post">
            <table class="layui-table layui-table-add layui-table-detail" lay-skin="nob">
                <tbody>
                    <tr>
                        <th>用户姓名</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="UserName" value="@Model.UserName" autocomplete="off" class="layui-input" readonly>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>登录账号</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="LoginId" value="@Model.LoginId" autocomplete="off" class="layui-input" readonly>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>登录密码</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="LoginPwd" value="@Model.LoginPwd" autocomplete="off" class="layui-input" readonly>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>联系电话</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="PhoneNumber" value="@Model.PhoneNumber" autocomplete="off" class="layui-input" readonly>
                            </div>
                        </td>
                    </tr>
                    <tr>
                        <th>邮箱</th>
                        <td>
                            <div class="table-input">
                                <input type="text" name="Email" value="@Model.Email" autocomplete="off" class="layui-input" readonly>
                            </div>
                        </td>
                    </tr>
                    @*<tr>
                            <th>角色类型</th>
                            <td>
                                <div class="table-input">
                                    <input type="radio" name="RoleId" value="1" title="普通用户" @(Model.RoleId==1?"checked":"")>
                                    <input type="radio" name="RoleId" value="2" title="产品经理" @(Model.RoleId==2?"checked":"")>
                                </div>
                            </td>
                        </tr>*@
                    <tr>
                        <th>角色类型</th>
                        <td>
                            <div class="table-input">
                                @{
                                    if (ViewBag.RoleInfo != null)
                                    {
                                        foreach (Models.RoleInfo role in (IList<Models.RoleInfo>)ViewBag.RoleInfo)
                                        {
                                            <input type="radio" name="RoleId" value="@role.RoleId" title="@role.RoleName" @(Model.RoleId == role.RoleId ? "checked" : "")>
                                        }
                                    }
                                }
                            </div>
                        </td>
                    </tr>
                </tbody>
            </table>
            <div class="layui-table-btn2 ">
                <a class="layui-btn layui-btn-danger cancel" onclick="window.history.back()">返 回</a>
            </div>
        </form>
    </div>
</div>